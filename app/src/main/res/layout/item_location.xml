<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/swipe_audio_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">



        <RelativeLayout
            android:id="@+id/layoutItemRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="vertical">
                <!--android:background="@drawable/edit_backgourd"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">



                    <com.example.dharmaniz.posmobileutilityapp.fonts.RegularCustomTextView
                        android:id="@+id/primaryZoneTV"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="left"
                        android:text=""
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                    <com.example.dharmaniz.posmobileutilityapp.fonts.RegularCustomTextView
                        android:id="@+id/primaryBINTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@android:color/transparent"
                        android:gravity="left"
                        android:visibility="gone"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        />

                    <com.example.dharmaniz.posmobileutilityapp.fonts.RegularCustomTextView
                        android:id="@+id/secondaryZoneTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@android:color/transparent"
                        android:gravity="left"

                        android:visibility="gone"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        />

                    <com.example.dharmaniz.posmobileutilityapp.fonts.RegularCustomTextView
                        android:id="@+id/secondaryBinTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@android:color/transparent"
                        android:gravity="left"
                        android:text=""
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                         />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/arrowNextRL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                    <com.example.dharmaniz.posmobileutilityapp.fonts.BoldCustomTextView
                        android:id="@+id/nameTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="left"
                        android:layout_weight="9"
                        android:text="gvbjhgj"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />
                    <ImageView
                        android:layout_toRightOf="@+id/nameTv"
                        android:id="@+id/arrowNextIV"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/arrow_next" />
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>



</LinearLayout>
